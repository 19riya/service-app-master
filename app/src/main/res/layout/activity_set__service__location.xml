<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.user.Set_Service_Location">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/get_address"
        android:background="#fff"
        android:layout_margin="10sp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/back_button"
                android:src="@drawable/ic_chevron_left_black_24dp"
                android:paddingRight="5sp"
                android:paddingLeft="3sp"
                android:paddingTop="2sp"
                android:paddingBottom="2sp"/>

            <TextView
                android:paddingLeft="5sp"
                android:paddingRight="3sp"
                android:paddingTop="2sp"
                android:paddingBottom="2sp"
                android:fontFamily="@font/domine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/enter_location_service"
                android:text="@string/user_location_heading"
                android:textSize="17sp"
                android:backgroundTint="#ffff"
                android:padding="3sp"
                android:textColor="#F76128"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1.5sp"
            android:layout_marginTop="5sp"
            android:background="#857C7C"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:padding="5sp"
            android:background="@drawable/user_address"
            android:id="@+id/fetch_current_location"
            android:orientation="vertical">

          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

              <com.sdsmdg.harjot.vectormaster.VectorMasterView
                  android:layout_width="24dp"
                  android:layout_height="24dp"
                  android:id="@+id/current_location_icon"
                  android:layout_gravity="bottom"
                  android:layout_marginRight="5sp"
                  android:layout_marginTop="5sp"
                  android:layout_marginLeft="5sp"
                  android:gravity="center"
                  app:vector_src="@drawable/ic_my_location_black_24dp" />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/location_subhead1"
                  android:gravity="center"
                  android:layout_gravity="bottom"
                  android:textSize="16sp"
                  android:textColor="#000"/>

          </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/location_gps"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_marginLeft="30sp"
                android:textColor="#554F4F"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1.5sp"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="6sp"
            android:layout_marginTop="10sp"
            android:background="#1B1A1A"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="25sp"
                android:text="@string/location_subhead2"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginLeft="10sp"
                android:textColor="#353232"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/home_address_layout"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:paddingBottom="10sp"
                android:background="@drawable/user_address"
                android:orientation="vertical">

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                   <com.sdsmdg.harjot.vectormaster.VectorMasterView
                       android:layout_width="24dp"
                       android:layout_height="24dp"
                       android:id="@+id/home_location_icon"
                       android:layout_gravity="bottom"
                       android:layout_marginRight="5sp"
                       android:layout_marginTop="5sp"
                       android:layout_marginLeft="5sp"
                       android:gravity="center"
                       app:vector_src="@drawable/ic_home_black_24dp" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/location_home"
                       android:gravity="center"
                       android:layout_gravity="bottom"
                       android:textSize="15sp"
                       android:textColor="#000"/>

               </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="27sp"
                    android:id="@+id/home_address"
                    android:text="@string/home_location1"
                    android:textColor="#554F4F"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1.5sp"
                android:layout_marginLeft="20sp"
                android:background="#857C7C"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/other_address_layout"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:paddingBottom="15sp"
                android:background="@drawable/user_address"
                android:orientation="vertical">

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                   <com.sdsmdg.harjot.vectormaster.VectorMasterView
                       android:layout_width="24dp"
                       android:layout_height="24dp"
                       android:id="@+id/other_location_icon"
                       android:layout_gravity="bottom"
                       android:layout_marginRight="5sp"
                       android:layout_marginTop="5sp"
                       android:layout_marginLeft="5sp"
                       android:gravity="center"
                       app:vector_src="@drawable/ic_place_black_24dp" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/location_other"
                       android:textSize="15sp"
                       android:gravity="center"
                       android:layout_gravity="bottom"
                       android:textColor="#000"/>

               </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="27sp"
                    android:id="@+id/other_address"
                    android:text="@string/home_location1"
                    android:textColor="#554F4F"/>

            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1.5sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="6sp"
            android:background="#1B1A1A"/>

    </LinearLayout>

</LinearLayout>


</ScrollView>