<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.user.User_Show_Profile"
    android:fitsSystemWindows="true"
    android:background="#F0F0F0"
    android:animateLayoutChanges="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tool_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000"
            app:titleTextColor="#ffff">
        </androidx.appcompat.widget.Toolbar>

      <ScrollView
          android:layout_width="match_parent"
          android:layout_height="match_parent">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">


                  <com.mikhaellopez.circularimageview.CircularImageView
                      android:id="@+id/user_image"
                      android:layout_width="130sp"
                      android:layout_gravity="center"
                      android:padding="10sp"
                      android:src="@drawable/man"
                      app:border_width="2sp"
                      android:layout_marginTop="7sp"
                      app:border_color="@color/colorPrimaryDark"
                      android:layout_height="130sp" />

                  <RelativeLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content">

                      <TextView
                          android:id="@+id/name"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:padding="10sp"
                          android:textStyle="bold"
                          android:text="Deekshant Yadav"
                          android:textSize="18sp"
                          android:textColor="#000"
                          android:layout_gravity="center"
                          android:gravity="center"/>


                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:gravity="end">

                          <ImageView
                              android:id="@+id/edit_user_profile"
                              android:layout_width="wrap_content"
                              android:padding="10sp"
                              android:layout_height="wrap_content"
                              android:layout_gravity="center"
                              app:srcCompat="@drawable/ic_edit_black_24dp"/>
                      </LinearLayout>
                  </RelativeLayout>

              </LinearLayout>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10sp"
                  android:layout_marginRight="10sp"
                  android:layout_marginLeft="10sp"
                  android:orientation="horizontal">

                  <TextView
                      android:layout_width="0px"
                      android:layout_weight="0.5"
                      android:layout_marginRight="5sp"
                      android:background="#20000000"
                      android:layout_gravity="center"
                      android:layout_height="0.2sp" />

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/show_heading"
                      android:gravity="center"
                      android:layout_gravity="center_horizontal"
                      android:textColor="#000"
                      android:textSize="14dp"/>

                  <TextView
                      android:layout_width="0px"
                      android:layout_weight="0.5"
                      android:background="#20000000"
                      android:layout_marginLeft="5sp"
                      android:layout_gravity="center"
                      android:layout_height="0.2sp" />
              </LinearLayout>

              <androidx.cardview.widget.CardView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  app:cardElevation="5sp"
                  app:cardCornerRadius="10sp"
                  android:layout_marginTop="15sp"
                  android:layout_marginRight="10sp"
                  android:layout_marginLeft="10sp">

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:padding="2sp"
                      android:orientation="vertical">





                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">

                          <TextView
                              android:layout_width="0px"
                              android:layout_weight="0.25"
                              android:layout_height="wrap_content"
                              android:text="@string/show_email"
                              android:gravity="center"
                              android:textColor="#000"
                              android:layout_marginTop="10sp"
                              android:layout_marginLeft="10sp"
                              android:padding="10sp"/>

                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text=":"
                              android:textStyle="bold"
                              android:textColor="@color/colorPrimary"
                              android:layout_marginTop="10sp"
                              android:padding="10sp"/>

                          <TextView
                              android:layout_width="0px"
                              android:layout_weight="0.3"
                              android:layout_height="wrap_content"
                              android:textColor="#D0000000"
                              android:id="@+id/email"
                              android:text="Example@xyz.com"
                              android:layout_marginTop="10sp"
                              android:padding="10sp"/>
                      </LinearLayout>



                      <TextView
                          android:layout_width="match_parent"
                          android:layout_marginRight="5sp"
                          android:background="#20000000"
                          android:layout_gravity="center"
                          android:layout_height="0.2sp" />

                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">

                          <TextView
                              android:layout_width="0px"
                              android:layout_weight="0.25"
                              android:layout_height="wrap_content"
                              android:text="@string/show_mobile"
                              android:gravity="center"
                              android:textColor="#000"
                              android:layout_marginLeft="10sp"
                              android:padding="10sp"/>

                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text=":"
                              android:textStyle="bold"
                              android:textColor="@color/colorPrimary"
                              android:padding="10sp"/>

                          <TextView
                              android:layout_width="0px"
                              android:layout_weight="0.3"
                              android:layout_height="wrap_content"
                              android:textColor="#D0000000"
                              android:id="@+id/mobile"
                              android:text="0000000000"
                              android:padding="10sp"/>

                      </LinearLayout>

                      <TextView
                          android:layout_width="match_parent"
                          android:layout_marginRight="5sp"
                          android:background="#20000000"
                          android:layout_gravity="center"
                          android:layout_height="0.2sp" />

                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">

                          <TextView
                              android:layout_width="0px"
                              android:layout_weight="0.25"
                              android:layout_height="wrap_content"
                              android:text="@string/show_birth"
                              android:gravity="center"
                              android:textColor="#000"
                              android:layout_marginLeft="10sp"
                              android:padding="10sp"/>

                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text=":"
                              android:textStyle="bold"
                              android:textColor="@color/colorPrimary"
                              android:padding="10sp"/>

                          <TextView
                              android:layout_width="0px"
                              android:layout_weight="0.3"
                              android:layout_height="wrap_content"
                              android:textColor="#D0000000"
                              android:id="@+id/dob"
                              android:text="0000000000"
                              android:padding="10sp"/>

                      </LinearLayout>

                      <TextView
                          android:layout_width="match_parent"
                          android:layout_marginRight="5sp"
                          android:background="#20000000"
                          android:layout_gravity="center"
                          android:layout_height="0.2sp" />

                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">

                          <TextView
                              android:layout_width="0px"
                              android:layout_weight="0.25"
                              android:layout_height="wrap_content"
                              android:text="@string/show_address1"
                              android:gravity="center"
                              android:textColor="#000"
                              android:layout_marginLeft="10sp"
                              android:padding="10sp"/>

                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text=":"
                              android:textStyle="bold"
                              android:textColor="@color/colorPrimary"
                              android:padding="10sp"/>

                          <TextView
                              android:layout_width="0px"
                              android:layout_weight="0.3"
                              android:layout_height="wrap_content"
                              android:textColor="#D0000000"
                              android:id="@+id/address1"
                              android:text="0000000000"
                              android:padding="10sp"/>

                      </LinearLayout>

                      <TextView
                          android:layout_width="match_parent"
                          android:layout_marginRight="5sp"
                          android:background="#20000000"
                          android:layout_gravity="center"
                          android:layout_height="0.2sp" />


                      <TextView
                          android:layout_width="match_parent"
                          android:layout_marginRight="5sp"
                          android:background="#20000000"
                          android:layout_gravity="center"
                          android:layout_height="0.2sp" />

                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:id="@+id/layout_address2"
                          android:orientation="horizontal">

                          <TextView
                              android:layout_width="0px"
                              android:layout_weight="0.25"
                              android:layout_height="wrap_content"
                              android:text="@string/show_user_address2"
                              android:gravity="center"
                              android:textColor="#000"
                              android:layout_marginLeft="10sp"
                              android:padding="10sp"/>

                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text=":"
                              android:textStyle="bold"
                              android:textColor="@color/colorPrimary"
                              android:padding="10sp"/>

                          <TextView
                              android:layout_width="0px"
                              android:layout_weight="0.3"
                              android:layout_height="wrap_content"
                              android:textColor="#D0000000"
                              android:id="@+id/address2"
                              android:text="0000000000"
                              android:padding="10sp"/>

                      </LinearLayout>


                      <TextView
                          android:layout_width="match_parent"
                          android:layout_marginRight="5sp"
                          android:background="#20000000"
                          android:layout_gravity="center"
                          android:layout_height="0.2sp" />


                  </LinearLayout>
              </androidx.cardview.widget.CardView>

          </LinearLayout>

      </ScrollView>

    </LinearLayout>

</LinearLayout>