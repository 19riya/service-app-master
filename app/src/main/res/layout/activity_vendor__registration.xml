<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:fitsSystemWindows="true"
    tools:context=".Activities.Vendor.Vendor_Registration">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tool_vendorRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000"
            app:title="@string/ven_reg_heading"
            app:titleTextColor="#fff">
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/Vendor_tabLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:tabIndicatorFullWidth="true"
                    app:tabSelectedTextColor="#000"
                    android:layout_gravity="center"
                    app:tabBackground="@drawable/tab_selector"
                    app:tabPaddingEnd="15sp"
                    app:tabPaddingStart="15sp"
                    app:tabIndicatorHeight="2dp"
                    app:tabTextColor="#fff">
                </com.google.android.material.tabs.TabLayout>

            </androidx.cardview.widget.CardView>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/frame_registration"></FrameLayout>



