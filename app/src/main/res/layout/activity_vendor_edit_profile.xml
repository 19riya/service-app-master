<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.user.Edit_User_Show_Profile"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:animateLayoutChanges="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/vendor_edit_layout"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tool_ven_edit_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000"
            app:titleTextColor="#ffff">
        </androidx.appcompat.widget.Toolbar>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="8.5">


           <ScrollView
               android:layout_width="match_parent"
               android:layout_height="match_parent">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical"
                   android:background="#F0F0F0">

                   <!--    <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="0dp"
                           android:layout_weight="1"
                           android:orientation="vertical"
                           android:background="@color/colorPrimaryDark"/>-->

                   <RelativeLayout
                       android:layout_width="135sp"
                       android:layout_height="135sp"
                       android:gravity="center"
                       android:layout_marginTop="20sp"
                       android:id="@+id/upload_edit_image"
                       android:layout_gravity="center">

                       <com.mikhaellopez.circularimageview.CircularImageView
                           android:id="@+id/evendor_image"
                           android:layout_width="120sp"
                           android:layout_gravity="center"
                           android:padding="10sp"
                           android:alpha="1"
                           android:src="@drawable/man"
                           app:border_width="3sp"
                           app:border_color="@color/colorPrimaryDark"
                           android:layout_height="120sp" />

                       <ImageView
                           android:layout_width="35sp"
                           android:layout_height="35dp"
                           android:background="@drawable/round_back"
                           android:layout_centerInParent="true"
                           android:padding="5sp"
                           android:layout_marginRight="10sp"
                           android:layout_marginBottom="10sp"
                           app:srcCompat="@drawable/ic_add_a_photo_black_24dp"
                           android:backgroundTint="#fff"
                           android:layout_alignParentRight="true"
                           android:layout_alignParentBottom="true"/>
                   </RelativeLayout>


                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:padding="2sp"
                       android:layout_marginTop="15sp"
                       android:orientation="vertical">

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="vertical">

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="@string/edit_name"
                               android:gravity="center"
                               android:textColor="#000"
                               android:textSize="15sp"
                               android:layout_marginTop="10sp"
                               android:layout_marginLeft="10sp"
                               android:padding="2sp"/>

                           <EditText
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:inputType="text"
                               android:textStyle="bold"
                               android:textSize="14sp"
                               android:editable="true"
                               android:layout_gravity="center"
                               android:background="@drawable/edit_profile"
                               android:id="@+id/evendor_name"
                               android:layout_marginLeft="10sp"
                               android:layout_marginRight="10sp"
                               android:textColor="@color/colorPrimary"
                               android:layout_marginTop="2sp"
                               android:padding="7sp"/>

                       </LinearLayout>

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="vertical">

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="@string/edit_birth"
                               android:gravity="center"
                               android:textColor="#000"
                               android:textSize="15sp"
                               android:layout_marginTop="7sp"
                               android:layout_marginLeft="10sp"
                               android:padding="2sp"/>

                           <EditText
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:inputType="text"
                               android:textStyle="bold"
                               android:textSize="14sp"
                               android:layout_gravity="center"
                               android:id="@+id/evendor_dob"
                               android:background="@drawable/edit_profile"
                               android:layout_marginLeft="10sp"
                               android:layout_marginRight="10sp"
                               android:textColor="@color/colorPrimary"
                               android:layout_marginTop="2sp"
                               android:padding="7sp"/>

                       </LinearLayout>

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="vertical">

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="@string/ven_edit_address"
                               android:gravity="center"
                               android:textColor="#000"
                               android:textSize="15sp"
                               android:layout_marginTop="7sp"
                               android:layout_marginLeft="10sp"
                               android:padding="2sp"/>

                           <EditText
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:inputType="text"
                               android:background="@drawable/edit_profile"
                               android:textStyle="bold"
                               android:layout_gravity="center"
                               android:textSize="14sp"
                               android:id="@+id/evendor_address"
                               android:layout_marginLeft="10sp"
                               android:layout_marginRight="10sp"
                               android:textColor="@color/colorPrimary"
                               android:layout_marginTop="2sp"
                               android:padding="7sp"/>

                       </LinearLayout>

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="vertical">

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="@string/ven_edit_experience"
                               android:gravity="center"
                               android:textColor="#000"
                               android:textSize="15sp"
                               android:layout_marginTop="10sp"
                               android:layout_marginLeft="10sp"
                               android:padding="2sp"/>

                           <EditText
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:inputType="number"
                               android:background="@drawable/edit_profile"
                               android:textStyle="bold"
                               android:maxLength="2"
                               android:padding="7sp"
                               android:layout_gravity="center"
                               android:textSize="14sp"
                               android:id="@+id/evendor_experience"
                               android:layout_marginLeft="10sp"
                               android:layout_marginRight="10sp"
                               android:textColor="@color/colorPrimary"
                               android:layout_marginTop="2sp"
                               />

                       </LinearLayout>

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal"
                           android:paddingLeft="12dp"
                           android:paddingRight="12dp"
                           android:paddingTop="12dp">

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="@string/small_phone"
                               android:layout_gravity="center_vertical"
                               android:textSize="15sp"
                               android:textColor="#000"/>


                           <Switch
                               android:layout_width="match_parent"
                               android:layout_gravity="center_vertical"
                               android:gravity="end"
                               android:id="@+id/edit_long_root_status"
                               android:layout_height="wrap_content"/>


                       </LinearLayout>

                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center"
                           android:layout_marginTop="10sp"
                           android:layout_marginLeft="10sp"
                           android:layout_marginRight="10sp"
                           android:padding="2sp"
                           android:textSize="15sp"
                           android:text="@string/frag_reg_select_skill"
                           android:textColor="#000" />

                       <LinearLayout
                           android:id="@+id/evendor_skill_category"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:padding="2sp"
                           android:layout_marginLeft="10sp"
                           android:layout_marginRight="10sp"
                           android:orientation="vertical" />

                       <LinearLayout
                           android:id="@+id/evendor_sub_category"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="10sp"
                           android:layout_marginRight="10sp"
                           android:layout_marginTop="2sp"
                           android:orientation="vertical">

                       </LinearLayout>
                     <!--  <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="vertical">

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="@string/ven_edit_skill"
                               android:gravity="center"
                               android:textColor="#000"
                               android:layout_marginTop="7sp"
                               android:layout_marginLeft="10sp"
                               android:padding="2sp"/>

                           <EditText
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:inputType="text"
                               android:background="@drawable/edit_profile"
                               android:textStyle="bold"
                               android:layout_gravity="center"
                               android:id="@+id/evendor_skill_category"
                               android:layout_marginLeft="10sp"
                               android:layout_marginRight="10sp"
                               android:textColor="@color/colorPrimary"
                               android:layout_marginTop="2sp"
                               android:padding="10sp"/>

                       </LinearLayout>


                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="vertical">

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="@string/ven_edit_sub_skill"
                               android:gravity="center"
                               android:textColor="#000"
                               android:layout_marginTop="10sp"
                               android:layout_marginLeft="10sp"
                               android:padding="2sp"/>

                           <EditText
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:inputType="text"
                               android:background="@drawable/edit_profile"
                               android:textStyle="bold"
                               android:padding="10sp"
                               android:layout_gravity="center"
                               android:id="@+id/evendor_sub_category"
                               android:layout_marginLeft="10sp"
                               android:layout_marginRight="10sp"
                               android:textColor="@color/colorPrimary"
                               android:layout_marginTop="2sp"
                               />

                       </LinearLayout>-->

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="vertical">

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="@string/ven_edit_descr"
                               android:gravity="center"
                               android:textColor="#000"
                               android:textSize="15sp"
                               android:layout_marginTop="10sp"
                               android:layout_marginLeft="10sp"
                               android:padding="2sp"/>

                           <EditText
                               android:layout_width="match_parent"
                               android:layout_height="40sp"
                               android:inputType="text"
                               android:background="@drawable/edit_profile"
                               android:textStyle="bold"
                               android:padding="7sp"
                               android:textSize="14sp"
                               android:id="@+id/evendor_skill_description"
                               android:layout_marginLeft="10sp"
                               android:layout_marginRight="10sp"
                               android:textColor="@color/colorPrimary"
                               android:layout_marginTop="2sp"
                               />

                       </LinearLayout>

                   </LinearLayout>



               </LinearLayout>

           </ScrollView>

       </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom">
            <Button
                android:id="@+id/echange_vendor_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="18sp"
                android:background="#000"
                android:textColor="#fff"
                android:text="@string/for_Submit"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>