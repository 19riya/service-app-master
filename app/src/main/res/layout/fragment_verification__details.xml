<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Tab_Fragments.Verification_Details">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="15sp">

            <Spinner
                android:id="@+id/spiner_user"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_marginTop="5sp">
            </Spinner>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:layout_marginTop="10sp"
                android:text="@string/frag_ver_heading"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#000"/>





            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:text="@string/frag_ver_heading1"
                android:textColor="#000"
                android:textSize="14sp"/>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                app:cardCornerRadius="10sp"
                app:cardBackgroundColor="#F55F5F"
                >


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10sp"
                    android:layout_margin="0.7sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/image_1"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_margin="2dp"
                            android:padding="5sp"
                            app:srcCompat="@drawable/ic_camera_alt_black_24dp"
                            />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />




            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:text="@string/frag_ver_heading2"
                android:textColor="#000"
                android:textSize="14sp"/>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                app:cardCornerRadius="10sp"
                app:cardBackgroundColor="#F55F5F"
                >


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10sp"
                    android:layout_margin="0.7sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/image_2"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_margin="2dp"
                            android:padding="5sp"
                            app:srcCompat="@drawable/ic_camera_alt_black_24dp"
                            />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:text="@string/frag_ver_heading3"
                android:textColor="#000"
                android:textSize="14sp"/>



            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutuserDesLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorTextAppearance="@style/ErrorText"
                app:hintTextAppearance="@style/HintText"
                style="@style/textInputStyle"
                android:layout_marginBottom="20sp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/textInputStyle"
                    android:padding="20sp"
                    android:textColor="#000"
                    android:id="@+id/userDesLayout"
                    android:hint="@string/frag_ver_heading5"
                    android:layout_gravity="bottom"/>

            </com.google.android.material.textfield.TextInputLayout>




            <!--<Button
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="15sp"
                android:paddingLeft="35dp"
                android:text="Save Details"
                android:textColor="#fff"
                android:background="@color/sweet_dialog_bg_color_dark"
                android:textAllCaps="false"
                android:id="@+id/btnEdit_save"
                android:paddingRight="35dp"/>-->

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center|right"
        android:layout_margin="15dp">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/previous_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginStart="2sp"
            android:layout_marginTop="2sp"
            android:layout_marginEnd="2sp"
            android:layout_marginBottom="2dp"
            android:src="@drawable/ic_arrow_back_black_24dp"
            app:backgroundTint="@color/colorPrimaryDark"
            app:rippleColor="@color/colorPrimaryDark" />

        <!--  <Button
              android:id="@+id/previous_tab"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center|right"
              android:text="@string/frag_reg_previous"
              android:gravity="center"
              android:textColor="#fff"
              android:textSize="15sp"
              android:padding="5sp"
              android:drawablePadding="3.5sp"
              android:drawableLeft="@drawable/ic_arrow_back_black_24dp"
              android:background="@drawable/registration_button"
              android:textAllCaps="false"/>-->

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_save_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginStart="2sp"
            android:layout_marginTop="2sp"
            android:layout_marginEnd="2sp"
            android:layout_marginBottom="2dp"
            android:src="@drawable/ic_arrow_forward_black_24dp"
            app:backgroundTint="@color/colorPrimaryDark"
            app:rippleColor="@color/colorPrimaryDark" />


        <!--<Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:text="@string/for_Submit"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="15sp"
            android:padding="5sp"
            android:background="@drawable/registration_button"
            android:textAllCaps="false"
            android:id="@+id/btn_save_" />-->

    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>