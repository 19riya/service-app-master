<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:id="@+id/otpLayout">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="0.4">


            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/app_logo"
                android:layout_gravity="center"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="2dp"
                android:text="@string/otp_heading"
                android:textColor="#000"
                android:textSize="22dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:text="@string/otp_heading1"
                android:textColor="#313030"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="2dp"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/no_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:hint="+91-7740836741"
                android:textColor="#000"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="2dp"
                android:textSize="16dp" />



            <LinearLayout
                android:id="@+id/otp_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:layout_marginTop="20sp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical"
                >

                <EditText
                    android:id="@+id/otp_send"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#000000"
                   android:maxLength="6"
                    android:layout_marginTop="10sp"
                    android:hint="@string/otp_enter"
                    android:gravity="center|start"
                    android:textColor="#000000"
                    android:singleLine="true"
                    android:inputType="number"
                    />



                <EditText
                    android:id="@+id/new_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#000000"
                    android:hint="@string/otp_password"
                    android:layout_marginTop="20sp"
                    android:gravity="center|start"
                    android:textColor="#000000"
                    android:singleLine="true"
                    />


            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:gravity="bottom"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                >

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/cancel_otp"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="#2478F5"
                android:text="@string/cancel_changes"
                android:layout_margin="1sp"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18sp"/>


            <Button
                android:id="@+id/submit_otp"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_margin="1sp"
                android:layout_height="wrap_content"
                android:background="#FF3030"
                android:text="@string/for_Submit"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18sp"
                />

        </LinearLayout>




        <!--<Button
            android:id="@+id/skip"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#3075FF"
            android:text="Skip"
            android:layout_marginTop="5sp"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="20dp"
            />-->




    </LinearLayout>

</LinearLayout>