<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="7sp"
        app:cardElevation="4sp"
        android:layout_margin="7dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10sp"
            android:orientation="vertical">
            <!-- EEEEEE-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#3D3B3B"
                android:layout_marginRight="30sp"
                android:layout_marginLeft="15sp"
                android:id="@+id/list_venName"
                android:textStyle="bold"
                android:drawableLeft="@drawable/ic_fiber_manual_record_black_notify_24dp"
                android:drawablePadding="6dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:layout_gravity="center_vertical"
                android:textSize="13sp"
                android:text="NAME"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32sp"
                android:layout_marginRight="17sp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star_black_24dp"
                    android:scaleType="fitXY"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.4"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:id="@+id/list_venRating"
                    android:gravity="center_vertical"
                    android:paddingLeft="7dp"
                    android:textSize="10sp"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5sp"
                android:orientation="horizontal">


                <androidx.cardview.widget.CardView
                    android:id="@+id/product_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="12sp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    app:cardElevation="3sp">

                    <ImageView
                        android:layout_width="130sp"
                        android:layout_height="100sp"
                        android:scaleType="fitXY"
                        android:id="@+id/list_venImage"
                        android:src="@drawable/man"/>

                </androidx.cardview.widget.CardView>


            <!--   <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_toRightOf="@id/product_image">-->

                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:gravity="center"
                       android:layout_marginTop="12sp"
                       android:layout_toRightOf="@id/product_image"
                       android:id="@+id/vend_title"
                       android:layout_height="wrap_content"
                       android:orientation="vertical">


                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textColor="#3D3B3B"
                           android:id="@+id/list_venExpr"
                           android:layout_marginRight="30sp"
                           android:fontFamily="sans-serif-condensed-medium"
                           android:layout_gravity="center_vertical"
                           android:textSize="13sp"
                           android:text="2 years Experiance"/>

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textColor="#EE585656"
                           android:layout_marginRight="30sp"
                           android:id="@+id/list_venDecrp"
                           android:fontFamily="sans-serif-condensed"
                           android:layout_gravity="center_vertical"
                           android:textSize="12sp"
                           android:text="vendor_ descrps"/>


                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:gravity="center_vertical"
                       android:layout_alignParentEnd="true"
                       android:layout_alignBottom="@id/product_image"
                       android:layout_gravity="end"
                       android:layout_marginRight="12sp"
                       android:layout_height="wrap_content"
                       android:orientation="vertical">

                       <!--<LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal">

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:textColor="#242222"
                               android:textSize="14sp"
                               android:fontFamily="sans-serif-condensed-medium"
                               android:text="1 Item Total:"/>

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:textColor="#000"
                               android:fontFamily="sans-serif-condensed"
                               android:layout_marginLeft="2dp"
                               android:textSize="13sp"
                               android:text=" \u20B9 300"/>
                       </LinearLayout>-->

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textColor="#252525"
                           android:layout_marginTop="3sp"
                           android:textSize="13sp"
                           android:id="@+id/select_vendor"
                           android:fontFamily="sans-serif-condensed-medium"
                           android:paddingTop="4sp"
                            android:paddingBottom="4sp"
                           android:paddingLeft="8sp"
                           android:paddingRight="8sp"
                           android:background="@drawable/see_all"
                           android:text="@string/for_select"/>

                   </LinearLayout>

               </RelativeLayout>

         <!--   </RelativeLayout>-->



        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#EEEEEE"/>


</LinearLayout>