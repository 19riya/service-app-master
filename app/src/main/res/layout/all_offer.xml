<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

     <ScrollView
         android:layout_width="match_parent"
         android:layout_height="wrap_content">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:padding="10sp"
             android:orientation="vertical">

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="15sp"
                 android:layout_marginRight="15sp"
                 android:layout_marginTop="10sp"
                 android:orientation="horizontal">

                 <TextView
                     android:layout_width="0dp"
                     android:layout_weight=".7"
                     android:text="Code:"
                     android:id="@+id/code"
                     android:layout_gravity="center"
                     android:textSize="20sp"
                     android:textStyle="bold"
                     android:layout_height="wrap_content"/>

                 <TextView
                     android:layout_width="0dp"
                     android:layout_weight=".3"
                     android:layout_height="wrap_content"
                     android:text="@string/apply_code"
                     android:id="@+id/apply_code"
                     android:fontFamily="@font/domine"
                     android:layout_gravity="end|center"
                     android:textColor="#FF0000"
                     android:gravity="center"
                     android:visibility="visible"
                     android:textSize="15sp"/>

                 <TextView
                     android:layout_width="0dp"
                     android:layout_weight=".3"
                     android:layout_height="wrap_content"
                     android:text="@string/remove_code"
                     android:textColor="#FF0000"
                     android:visibility="visible"
                     android:id="@+id/remove_code"
                     android:layout_gravity="end|center"
                     android:textSize="17sp"/>

             </LinearLayout>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical">


                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:textSize="17sp"
                     android:layout_marginTop="12sp"
                     android:textAlignment="center"
                     android:id="@+id/short_descrp"
                     android:layout_marginLeft="15sp"
                     android:layout_marginRight="15sp"
                     android:textStyle="italic"
                     android:text="Get upto 20% discount using Code 013BFG"/>

                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="1dp"
                     android:layout_marginTop="2sp"
                     android:layout_marginLeft="15sp"
                     android:layout_marginRight="15sp"
                     android:background="#797070"/>

                 <TextView
                     android:id="@+id/offer_validity"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:drawableLeft="@drawable/ic_date_range_black_24dp"
                     android:drawablePadding="4sp"
                     android:layout_marginLeft="10sp"
                     android:layout_marginTop="7sp"
                     android:text="Valid only for 10 days"
                     android:textAlignment="textStart"
                     android:textColor="#000"
                     android:textSize="15sp" />

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="10sp"
                     android:textSize="18sp"
                     android:visibility="visible"
                     android:textColor="#1043C4"
                     android:id="@+id/offer_details"
                     android:text="View Details"/>

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:id="@+id/details_layout"
                     android:visibility="gone"
                     android:orientation="vertical">

                     <TextView
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="fees"
                         android:id="@+id/offer_fees"
                         android:textSize="15sp"
                         android:textColor="#000"
                         android:layout_marginLeft="10sp"
                         android:gravity="start|center"
                         android:textStyle="italic"
                         android:layout_gravity="center"/>


                     <TextView
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="description"
                         android:id="@+id/offer_descrp"
                         android:textSize="15sp"
                         android:textColor="#000"
                         android:layout_marginLeft="10sp"
                         android:gravity="start|center"
                         android:textStyle="italic"
                         android:layout_gravity="center"/>

                     <TextView
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="Applicable Maximum 2 times"
                         android:id="@+id/offer_maxUse"
                         android:textSize="15sp"
                         android:textColor="#000"
                         android:layout_marginLeft="10sp"
                         android:gravity="start|center"
                         android:textStyle="italic"
                         android:layout_gravity="center"/>
                 </LinearLayout>

             </LinearLayout>

             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="1dp"
                 android:layout_marginLeft="4sp"
                 android:layout_marginRight="4sp"
                 android:layout_marginTop="4sp"
                 android:background="#797070"/>
         </LinearLayout>

     </ScrollView>


    </LinearLayout>

