<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="7sp"
        app:cardMaxElevation="5sp"
        android:layout_margin="10sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".4"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif"
                    android:textColor="#201F1F"
                    android:id="@+id/user_history_id"
                    android:text="@string/order_no"
                    android:layout_marginLeft="8sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:text="@string/status"
                    android:fontFamily="sans-serif"
                    android:textColor="#201F1F"
                    android:id="@+id/user_history_status"
                    android:textSize="15sp"
                    android:layout_marginRight="10sp"
                    android:gravity="end"/>



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginRight="7sp"
                android:layout_marginBottom="7sp"
                android:layout_marginLeft="7sp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:layout_marginEnd="5sp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100sp"
                        android:scaleType="fitXY"
                        android:id="@+id/user_history_image"
                        android:layout_height="75sp"
                        android:src="@drawable/man"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="14-Feb-20 16:20:30"
                        android:id="@+id/service_history_date"
                        android:gravity="center_horizontal"
                        android:textColor="#000"
                        android:textSize="11sp"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingLeft="7sp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/user_name"
                                android:fontFamily="sans-serif"
                                android:textStyle="bold"
                                android:textColor="#201F1F"
                                android:id="@+id/user_history_name"
                                android:padding="2sp"
                                android:layout_marginLeft="5sp"
                                android:textSize="15sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/user_mobile"
                                android:layout_alignParentEnd="true"
                                android:fontFamily="sans-serif-condensed"
                                android:padding="2sp"
                                android:textColor="#201F1F"
                                android:id="@+id/user_history_mobile"
                                android:layout_marginRight="5sp"
                                android:textSize="14sp"/>


                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/user_history_service"
                            android:fontFamily="sans-serif-condensed"
                            android:text="@string/ven_order_heading"
                            android:layout_marginTop="4sp"
                            android:paddingLeft="2sp"
                            android:textColor="#201F1F"
                            android:layout_marginLeft="5sp"
                            android:textSize="14sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/uhistory_amount"
                            android:fontFamily="sans-serif-condensed"
                            android:layout_marginTop="-1dp"
                            android:text="Service amount:"
                            android:paddingLeft="2sp"
                            android:textColor="#201F1F"
                            android:layout_marginLeft="5sp"
                            android:textSize="14sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-condensed"
                            android:id="@+id/user_history_otp"
                            android:layout_marginTop="-1dp"
                            android:text="@string/generated_otp"
                            android:paddingLeft="2sp"
                            android:textColor="#201F1F"
                            android:layout_marginLeft="5sp"
                            android:textSize="14sp"/>

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                android:id="@+id/show_user_rating"
                android:gravity="center">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="17sp"
                android:layout_marginRight="17sp"
                android:background="#A29696"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="7sp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.7"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/rate_review"
                        android:gravity="center"
                        android:textColor="#3A3636"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                   <LinearLayout
                       android:layout_width="0dp"
                       android:layout_weight="1.3"
                       android:orientation="vertical"
                       android:layout_height="wrap_content">

                       <RatingBar
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:id="@+id/user_rating"
                           android:numStars="5"
                           android:layout_gravity="center"
                           android:paddingLeft="2sp"
                           android:paddingRight="2sp"
                           android:paddingTop="3sp"/>

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="@string/write_review"
                           android:textSize="15sp"
                           android:visibility="visible"
                           android:id="@+id/write_review"
                           android:padding="7sp"
                           android:background="@drawable/login_screen"
                           android:textColor="#2B752E"/>

                       <EditText
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:padding="10sp"
                           android:id="@+id/enter_review"
                           android:visibility="gone"
                           android:textSize="15sp"
                           android:textColor="#000"
                           android:background="@drawable/change_password_button"
                           android:hint="@string/enter_review"/>

                   </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>