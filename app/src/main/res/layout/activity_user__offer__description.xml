<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.user.User_Offer_Description">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="0.25"
               android:background="#F54747"
               android:orientation="vertical">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/subscrp_title"
                   android:textSize="23sp"
                   android:textColor="#fff"
                   android:layout_gravity="center"
                   android:layout_marginTop="20sp"
                   android:textStyle="bold"
                   android:fontFamily="@font/domine"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/app_name"
                   android:textSize="17sp"
                   android:textColor="#ffff"
                   android:layout_gravity="center"
                   android:fontFamily="@font/domine"/>


           </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-50sp"
            android:gravity="center">

            <TextView
                android:id="@+id/offer_fees"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="5sp"
                android:layout_marginTop="5sp"
                android:textStyle="bold"
                android:background="@drawable/subscrp_price"
                android:gravity="center"
                android:text="$ 30"
                android:textColor="#ffff"
                android:textSize="27sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".8"
            android:layout_marginTop="25sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:id="@+id/subsc_descrp"
                android:textAlignment="center"
                android:fontFamily="@font/domine"
                android:layout_gravity="center"
                android:textColor="#201F1F"
                android:text="Weekend Offer 30%OFF on all electronic item repairing "/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="50sp"
                android:layout_marginLeft="17sp"
                android:layout_marginRight="17sp">


                   <TextView
                       android:id="@+id/offer_title"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:padding="6sp"
                       android:text="Title"
                       android:drawablePadding="7sp"
                       android:drawableStart="@drawable/ic_fiber_manual_record_black_notify_24dp"
                       android:layout_marginLeft="55sp"
                       android:fontFamily="@font/domine"
                       android:layout_gravity="start"
                       android:gravity="center"
                       android:textColor="#201F1F"
                       android:textSize="18sp" />

              <!--  <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:layout_marginTop="5sp"
                    android:background="#8D8181"/>
-->

                    <TextView
                        android:id="@+id/offer_validity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6sp"
                        android:layout_marginLeft="55sp"
                        android:layout_marginTop="7sp"
                        android:fontFamily="@font/domine"
                        android:drawablePadding="7sp"
                        android:drawableStart="@drawable/ic_fiber_manual_record_black_notify_24dp"
                        android:text="Validity"
                        android:layout_gravity="start"
                        android:textColor="#201F1F"
                        android:textSize="18sp" />



               <!-- <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:layout_marginTop="5sp"
                    android:background="#8D8181"/>-->


                <!--<TextView
                    android:id="@+id/subsc_descrp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6sp"
                    android:layout_marginLeft="70sp"
                    android:layout_marginTop="7sp"
                    android:fontFamily="@font/domine"
                    android:drawablePadding="7sp"
                    android:drawableStart="@drawable/ic_fiber_manual_record_black_notify_24dp"
                    android:text="Validity"
                    android:layout_gravity="start"
                    android:textColor="#201F1F"
                    android:textSize="18sp" />-->

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>