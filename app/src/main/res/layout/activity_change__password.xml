<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/pass_layout"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/change_pass_tool"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleTextColor="#fff"
            app:title="@string/title_change_password"
            android:layout_marginBottom="5sp"
            android:background="@color/colorPrimaryDark">
        </androidx.appcompat.widget.Toolbar>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            app:cardMaxElevation="7sp"
            android:layout_marginTop="15sp"
            app:cardElevation="10sp"
            android:textSize="20sp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:text="@string/current_password"
                        android:textSize="17sp"
                        android:padding="3sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginRight="5sp"/>

                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="3.7"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#fff"
                        android:layout_marginLeft="5sp"
                        android:id="@+id/current_pass"
                        android:layout_marginRight="5sp"
                        android:hint="*****"
                        android:padding="3sp"
                        android:gravity="start|center"
                        android:inputType="textPassword"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight=".6"
                        android:layout_gravity="center"
                        android:id="@+id/old_show_hide"
                        android:layout_marginRight="10sp"
                        android:src="@drawable/ic_visibility_off_grey_900_24dp"
                        android:layout_height="wrap_content" />


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:background="#9B9393"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginTop="5sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:text="@string/new_password"
                        android:textSize="17sp"
                        android:padding="3sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginRight="5sp"/>


                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="3.7"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#fff"
                        android:layout_marginLeft="5sp"
                        android:id="@+id/new_pass"
                        android:layout_marginRight="5sp"
                        android:hint="*****"
                        android:padding="3sp"
                        android:gravity="start|center"
                        android:inputType="textPassword"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight=".6"
                        android:layout_gravity="center"
                        android:layout_marginRight="10sp"
                        android:id="@+id/new_show_hide"
                        android:src="@drawable/ic_visibility_off_grey_900_24dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:background="#9B9393"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginTop="5sp"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="15sp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginRight="5sp"
                        android:padding="3sp"
                        android:text="@string/re_enter"
                        android:textSize="17sp" />


                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="3.7"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#fff"
                        android:layout_marginLeft="5sp"
                        android:id="@+id/re_type_new_pass"
                        android:layout_marginRight="5sp"
                        android:hint="*****"
                        android:padding="3sp"
                        android:gravity="start|center"
                        android:inputType="textPassword"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight=".6"
                        android:layout_gravity="center"
                        android:id="@+id/re_show_hide"
                        android:layout_marginRight="10sp"
                        android:src="@drawable/ic_visibility_off_grey_900_24dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15sp"
            android:background="#000"
            android:textColor="#ffff"
            android:id="@+id/save_changes"
            android:text="@string/save_changes"
            android:textStyle="bold"
            android:padding="3sp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:layout_marginTop="2sp"
            android:id="@+id/cancel_change"
            android:background="@drawable/change_password_button"
            android:textColor="#000"
            android:text="@string/cancel_changes"
            android:padding="3sp"/>
    </LinearLayout>
</ScrollView>